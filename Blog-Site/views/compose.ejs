<%- include("partials/header") -%>

<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="form-group">
    <label for="txtTitleID">Title</label>
    <input type="text" class="form-control" name="txtTitle" id="txtTitleID" placeholder="New title...">
  </div>
  <div class="form-group">
    <label for="txtComposeID">Post</label>
    <textarea class="form-control" type="text" id="txtComposeID" name="txtCompose" placeholder="New post..." rows="3"></textarea>
  </div>
  <button class="btn btn-lg btn-primary" type="submit" name="btnPublish">Publish</button>
</form>

<%- include("partials/footer") -%>
